<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="3"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:columnOrderPreserved="false"
        android:rowCount="5">

        <Button
            android:id="@+id/ca"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#A4A6A7"
            android:fontFamily="sans-serif-medium"
            android:onClick="erased"
            android:text="CA"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <Button
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#A4A6A7"
            android:fontFamily="sans-serif-medium"
            android:onClick="erased"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <Button
            android:id="@+id/porcent"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#A4A6A7"
            android:fontFamily="sans-serif-medium"
            android:onClick="changeOperator"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#0C2074"
            android:fontFamily="sans-serif-medium"
            android:onClick="changeOperator"
            android:text="รท"
            android:textSize="34sp" />

        <Button
            android:id="@+id/seven3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#333333"
            android:onClick="selectionNumber"
            android:text="7"
            android:textSize="34sp" />

        <Button
            android:id="@+id/eight4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#333333"
            android:onClick="selectionNumber"
            android:text="8"
            android:textSize="34sp" />

        <Button
            android:id="@+id/nine3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#333333"
            android:onClick="selectionNumber"
            android:text="9"
            android:textSize="34sp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#0C2074"
            android:onClick="changeOperator"
            android:text="x"
            android:textSize="34sp" />

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#333333"
            android:onClick="selectionNumber"
            android:text="4"
            android:textSize="34sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#333333"
            android:onClick="selectionNumber"
            android:text="5"
            android:textSize="34sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#333333"
            android:onClick="selectionNumber"
            android:text="6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/subtract"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#0C2074"
            android:onClick="changeOperator"
            android:text="-"
            android:textSize="34sp" />

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#333333"
            android:onClick="selectionNumber"
            android:text="1"
            android:textSize="34sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#333333"
            android:onClick="selectionNumber"
            android:text="2"
            android:textSize="34sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#333333"
            android:onClick="selectionNumber"
            android:text="3"
            android:textSize="34sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#0C2074"
            android:onClick="changeOperator"
            android:text="+"
            android:textSize="34sp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#333333"
            android:onClick="selectionNumber"
            android:text="0"
            android:textAlignment="textStart"
            android:textSize="34sp" />

        <Button
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#333333"
            android:onClick="selectionNumber"
            android:text="."
            android:textSize="34sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#0C2074"
            android:onClick="equal"
            android:text="="
            android:textSize="34sp" />
    </GridLayout>
</LinearLayout>
